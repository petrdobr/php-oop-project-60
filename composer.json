{
  "name": "hexlet/code",
  "bin": ["bin/hexlet-validator"],
  "type": "library",
  "authors": [
    {
      "name": "Kirill Mokevnin",
      "email": "mokevnin@gmail.com"
    }
  ],
  "description": "hexlet validator code",
  "license": "MIT",
  "scripts": {
    "test": "phpunit tests"
  },
  "autoload": {
    "psr-4": {
      "Hexlet\\Validator\\": "src",
      "Hexlet\\Validator\\Tests\\": "tests"
    }
  },
  "require": {
    "tightenco/collect": "^9.33",
    "nesbot/carbon": "^2.64",
    "symfony/string": "^6.2",
    "phpstan/phpstan": "^1.9.2"
  },
  "require-dev": {
    "psy/psysh": "@stable",
    "phpstan/phpstan-phpunit": "^1.2.2",
    "phpstan/extension-installer": "^1.2",
    "symfony/var-dumper": "^6.2.1",
    "phpunit/phpunit": "^9.5.26",
    "squizlabs/php_codesniffer": "^3.7.1"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
